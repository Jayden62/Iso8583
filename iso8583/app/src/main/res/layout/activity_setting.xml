<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        tools:context=".screens.setting.SettingActivity">

    <android.support.constraint.ConstraintLayout
            android:id="@+id/mHeader"
            android:background="#1E90FF"
            android:layout_width="match_parent"
            android:padding="15dp"
            android:layout_height="60dp">

        <ImageView
                android:id="@+id/mImageViewNavigate"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/bg_navigate_setting_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:text="Settings"
                app:layout_constraintStart_toStartOf="@+id/mHeader"
                app:layout_constraintEnd_toEndOf="@+id/mHeader"
                app:layout_constraintTop_toTopOf="@+id/mHeader"
                app:layout_constraintBottom_toBottomOf="@+id/mHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </android.support.constraint.ConstraintLayout>

    <TextView
            android:background="@android:color/white"
            android:drawableStart="@drawable/bg_volume_setting_selector"
            android:padding="20dp"
            android:text="Sound"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/mTextViewSound"
            android:textColor="@drawable/bg_setting_text_selector"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:drawablePadding="20dp"
            app:layout_constraintTop_toBottomOf="@+id/mHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


</android.support.constraint.ConstraintLayout>